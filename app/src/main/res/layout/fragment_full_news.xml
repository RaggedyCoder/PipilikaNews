<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:newsimage="http://schemas.android.com/apk/res-auto"
    xmlns:paddingview="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progress_wheel"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_alignTop="@+id/news_image"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="48dp" />

        <com.pipilika.news.view.widget.NewsImageView
            android:id="@+id/news_image"
            android:layout_width="wrap_content"
            android:layout_height="200dip"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top"
            android:gravity="top"
            android:paddingTop="5dp"
            android:scaleType="fitCenter"
            newsimage:loaderViewId="@+id/progress_wheel" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00000000">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:orientation="vertical">

            <com.pipilika.news.view.widget.PaddingView
                android:id="@+id/padding_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#004285F4"
                paddingview:viewId="@+id/news_image" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/news_background"
                android:orientation="vertical">

                <com.pipilika.news.view.widget.CustomTextView
                    android:id="@+id/news_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:text="Metro News"
                    android:textColor="#ff002944"
                    android:textSize="20sp" />

                <com.pipilika.news.view.widget.CustomTextView
                    android:id="@+id/news_headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Arsene Wenger perfectly trolled Chelsea with ‘1-0 is usual’ jibe after Arsenal v Reading clash"
                    android:textColor="#ff339aff"
                    android:textSize="24sp"
                    app:font="Roboto-Bold.ttf" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.pipilika.news.view.widget.CustomTextView
                        android:id="@+id/news_paper_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:padding="10dp"
                        android:text="Metro News"
                        android:textColor="#ff339aff"
                        android:textSize="18sp"
                        app:font="Roboto-Bold.ttf" />

                    <com.pipilika.news.view.widget.CustomTextView
                        android:id="@+id/news_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:gravity="end"
                        android:padding="10dp"
                        android:text="21 Apr 2015 10:49 am"
                        android:textSize="18sp"
                        app:font="kalpurush.ttf" />
                </RelativeLayout>


                <com.pipilika.news.view.widget.CustomTextView
                    android:id="@+id/news_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/news_image"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Arsene Wenger’s Arsenal press conferences are boring at the best of times, with the Frenchman famed for his classic straight bat responses.Arsene Wenger’s Arsenal press conferences are boring at the best of times, with the Frenchman famed for his classic straight bat responses.Arsene Wenger’s Arsenal press conferences are boring at the best of times, with the Frenchman famed for his classic straight bat responses."
                    android:textColor="#333333"
                    android:textSize="16sp"
                    app:font="kalpurush.ttf" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="#4285F4"
        android:elevation="5dp"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="#004285F4"
        android:elevation="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/abc_action_bar_default_height_material"
            android:layout_height="@dimen/abc_action_bar_default_height_material">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="@dimen/abc_action_bar_default_height_material"
                android:layout_height="@dimen/abc_action_bar_default_height_material"
                android:layout_margin="6dp"
                android:background="@drawable/floating_circle"
                android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha" />
        </RelativeLayout>

        <com.pipilika.news.view.widget.CustomTextView
            android:id="@+id/news_category_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:gravity="center|start"
            android:text="Entertainment"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/actionbar_text_size"
            app:font="Roboto-Medium.ttf" />
    </LinearLayout>

</RelativeLayout>