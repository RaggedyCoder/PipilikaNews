<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:onlineimage="http://schemas.android.com/apk/res-auto"
    xmlns:summarytext="http://schemas.android.com/apk/res-auto"
    xmlns:tagtext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:background="@drawable/cluster_pager_item_background"
        android:orientation="vertical">

        <com.pipilika.news.view.widget.CustomTextView
            android:id="@+id/news_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Arsene Wenger perfectly trolled Chelsea with ‘1-0 is usual’ jibe after Arsenal v Reading clash"
            android:textColor="#ff339aff"
            android:textSize="18sp"
            app:font="Roboto-Black.ttf" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/news_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp" />

        <com.pipilika.news.view.widget.OnlineImageView
            android:id="@+id/news_image"
            android:layout_width="fill_parent"
            android:layout_height="150dip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/news_paper_name"
            android:layout_margin="5dp"
            android:background="#00000000"
            android:scaleType="centerCrop"
            onlineimage:loaderViewId="@+id/progressBar" />

        <com.pipilika.news.view.widget.CustomTextView
            android:id="@+id/news_paper_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/news_headline"
            android:paddingLeft="10dip"
            android:text="Metro News"
            android:textSize="14sp"
            app:font="kalpurush.ttf" />

        <com.pipilika.news.view.widget.CustomTextView
            android:id="@+id/news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/news_headline"
            android:paddingRight="20dip"
            android:text="21 Apr 2015 10:49 am"
            android:textSize="12sp"
            app:font="Roboto-Bold.ttf" />


        <com.pipilika.news.view.widget.TagTextView
            android:id="@+id/news_category"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_alignBottom="@+id/news_summary"
            android:layout_alignEnd="@+id/news_summary"
            android:layout_alignRight="@+id/news_time"
            android:gravity="bottom|end"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:text="Full News"
            android:textColor="#FFFFFF"
            app:font="Roboto-Regular.ttf"
            tagtext:tagBackgroundColor="#ff339aff" />

        <com.pipilika.news.view.widget.NewsSummaryTextView
            android:id="@+id/news_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Arsene Wenger’s Arsenal press conferences are boring at the best of times, with the Frenchman famed for his classic straight bat responses.Arsene Wenger’s Arsenal press conferences are boring at the best of times, with the Frenchman famed for his classic straight bat responses.Arsene Wenger’s Arsenal press conferences are boring at the best of times, with the Frenchman famed for his classic straight bat responses."
            android:textColor="#333333"
            android:textSize="12sp"
            app:font="kalpurush.ttf"
            summarytext:tagViewId="@+id/news_category" />


    </RelativeLayout>
</LinearLayout>