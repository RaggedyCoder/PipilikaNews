<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00F700"
    android:orientation="vertical">

    <com.pipilika.news.view.widget.CustomTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="Pipilika News"
        android:textColor="#ED504F"
        android:textSize="40sp"
        app:font="Roboto-Light.ttf" />

    <com.pipilika.news.view.widget.CustomTextView
        android:id="@+id/loading_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view3"
        android:layout_centerHorizontal="true"
        android:text="Pipilika News"
        android:textColor="#ff002944"
        android:textSize="20sp"
        app:font="Roboto-Regular.ttf" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/pipilika_logo" />

    <com.pipilika.news.view.widget.MaterialProgressBar
        android:id="@+id/view3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        wheel:matProg_barColor="#ffED504F"
        wheel:matProg_barWidth="3dip"
        wheel:matProg_fillRadius="true"
        wheel:matProg_progressIndeterminate="true" />

</RelativeLayout>