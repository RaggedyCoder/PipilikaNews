<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0BC70B"
    android:orientation="vertical">

    <com.pipilika.news.view.widget.CustomTextView
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="Pipilika News"
        android:textColor="#ffed372e"
        android:textSize="40sp"
        app:font="Roboto-Bold.ttf" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/pipilika_logo" />

    <com.pipilika.news.view.widget.MaterialProgressBar
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/view"
        android:layout_alignStart="@+id/view"
        android:layout_below="@+id/imageView"
        wheel:matProg_barColor="#ffed372e"
        wheel:matProg_progressIndeterminate="true" />
</RelativeLayout>