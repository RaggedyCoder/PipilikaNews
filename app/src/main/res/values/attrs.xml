<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TagTextView">
        <attr name="tagBackgroundColor" format="color" />
        <attr name="mirror" format="boolean" />
    </declare-styleable>

    <declare-styleable name="NewsSummaryTextView">
        <!-- Background color for CardView. -->
        <attr name="tagViewId" format="reference" />
    </declare-styleable>

    <declare-styleable name="PaddingView">
        <!-- Background color for CardView. -->
        <attr name="viewId" format="reference" />
    </declare-styleable>

    <declare-styleable name="NewsImageView">
        <!-- Background color for CardView. -->
        <attr name="loaderViewId" format="reference" />
    </declare-styleable>

    <declare-styleable name="CustomFont">
        <attr name="font" format="string" />
    </declare-styleable>
    <declare-styleable name="MaterialProgressBar">
        <attr name="matProg_progressIndeterminate" format="boolean" />
        <attr name="matProg_barColor" format="color" />
        <attr name="matProg_rimColor" format="color" />
        <attr name="matProg_rimWidth" format="dimension" />
        <attr name="matProg_spinSpeed" format="float" />
        <attr name="matProg_barSpinCycleTime" format="integer" />
        <attr name="matProg_circleRadius" format="dimension" />
        <attr name="matProg_fillRadius" format="boolean" />
        <attr name="matProg_barWidth" format="dimension" />
        <attr name="matProg_linearProgress" format="boolean" />
    </declare-styleable>

    <declare-styleable name="nightModeToolbar">
        <attr name="nightTitleTextColor" format="color|reference" />
        <attr name="nightPopupTheme" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="nightModeCardView">
        <attr name="nightCardBackgroundColor" format="color" />
    </declare-styleable>
</resources>