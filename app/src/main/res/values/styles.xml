<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="splash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">#FF00F601</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#FF1B5E20</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#FF00F601</item>
    </style>

    <style name="cluster" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">#FF4285F4</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#FF3367D6</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#FF4285F4</item>
    </style>

    <style name="fullNews" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@null</item>
        <item name="colorPrimaryDark">#FF3367D6</item>
        <item name="actionBarDivider">@null</item>
        <item name="elevation">0dip</item>
        <item name="backgroundStacked">@null</item>
        <item name="backgroundSplit">@null</item>
        <item name="colorAccent">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

</resources>
